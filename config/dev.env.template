# RHOAI Ops Buddy - Development Configuration Template
# Copy this to config/dev.env and fill in your values

# =============================================================================
# Jenkins MCP Server
# =============================================================================
JENKINS_URL=https://your-jenkins-server.example.com
JENKINS_USER=your-jenkins-username
JENKINS_PASSWORD=your-jenkins-password

# =============================================================================
# Cluster Monitor MCP Server
# =============================================================================
HIVE_KUBECONFIG_HOST=/home/your-user/.kube/hive.yaml
HIVE_CONTEXT=hive-cluster

# =============================================================================
# LLM Configuration
# =============================================================================
LLM_BASE_URL=https://your-llm-endpoint
LLM_API_KEY=your-llm-api-key
LLM_MODEL=your-llm-model
LLM_TEMPERATURE=0.7

# =============================================================================
# Chat UI (Development - direct browser connection to LangGraph)
# =============================================================================
# Browser connects directly to LangGraph server at this URL
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ASSISTANT_ID=agent

# =============================================================================
# LangSmith (Optional - for tracing)
# =============================================================================
LANGSMITH_API_KEY=
